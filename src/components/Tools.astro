---
import { technologies } from "../config";
---

<script>
    import { gsap } from "gsap";

    document.addEventListener("DOMContentLoaded", function () {
        const clonedContainer = document.querySelector("#cloned") as any;

        Array.from(clonedContainer.children).forEach((img: any) => {
            const clone = img.cloneNode(true);
            clonedContainer.appendChild(clone);
        });

        const tl = gsap.timeline({ repeat: -1 });
        tl.to(clonedContainer, {
            x: -(clonedContainer.scrollWidth / 2),
            duration: 30,
            ease: "none",
        });
    });
</script>

<section class="bg-black py-4 border-y-2 border-black relative z-5 select-none">
    <div class="overflow-hidden">
        <div class="flex items-center" id="cloned">
            {
                technologies.map((item, index) => (
                    <div class="flex items-center gap-8 mx-4">
                        <span
                            class={`text-3xl font-bold uppercase font-mono ${index % 2 === 0 ? "text-(--yellow)" : "text-[#bae6ff]"}`}
                        >
                            {item}
                        </span>
                    </div>
                ))
            }
        </div>
    </div>
</section>
