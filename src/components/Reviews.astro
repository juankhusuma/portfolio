---
import svgNew from "../assets/new.svg";

import { awards } from "../config";

// Rotation classes for visual variety
const rotations = [
  "rotate-1 -translate-y-2",
  "-rotate-1 translate-y-2",
  "rotate-2 -translate-y-1",
  "-rotate-2 translate-y-1",
];
---

<section class="py-20">
  <div class="max-w-5xl mx-auto px-10 overflow-hidden">
    <div class="flex items-center gap-4 mb-10 reveal-on-scroll">
      <span class="text-2xl font-mono text-gray-400">//</span>
      <h1 class="text-5xl md:text-5xl font-medium">Awards & Achievements</h1>
      <img src={svgNew.src} alt="arrow" width="40" class="animate-bounce" />
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {
        awards.map((award, index) => (
          <div class="reveal-on-scroll group flex flex-col gap-4 p-6 bg-white border-2 border-black shadow-[6px_6px_0px_rgba(0,0,0,1)] transition-all duration-300 hover:shadow-[10px_10px_0px_rgba(0,0,0,1)] hover:-translate-y-1">
            <div class="flex items-start justify-between">
              <span class="text-5xl">{award.icon}</span>
              <span class="text-xs font-mono bg-black text-white px-2 py-1 border border-black">
                {award.event}
              </span>
            </div>

            <div class="flex-1">
              <h3 class="text-xl font-bold leading-tight mb-2 group-hover:underline decoration-2 underline-offset-4">
                {award.title}
              </h3>
              <p class="text-gray-600 text-sm leading-relaxed">
                {award.description}
              </p>
            </div>

            <div class="pt-4 mt-auto border-t-2 border-gray-100 flex items-center gap-3">
              <a
                href={award.certificateUrl}
                target="_blank"
                class="flex-1 text-center text-sm font-bold font-mono border-2 border-black py-2 bg-gray-50 hover:bg-[var(--yellow)] transition-colors shadow-[2px_2px_0px_0px_black] active:translate-y-[1px] active:shadow-none"
              >
                Certificate
              </a>
              <a
                href={award.caseStudyUrl}
                target="_blank"
                class="flex-1 text-center text-sm font-bold font-mono border-2 border-black py-2 bg-black text-white hover:bg-gray-800 transition-colors shadow-[2px_2px_0px_0px_rgba(0,0,0,0.5)] active:translate-y-[1px] active:shadow-none"
              >
                Case Study
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
