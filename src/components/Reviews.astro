---
import svgNew from "../assets/new.svg";

import { awards } from "../config";

// Rotation classes for visual variety
const rotations = [
  "rotate-1 -translate-y-2",
  "-rotate-1 translate-y-2",
  "rotate-2 -translate-y-1",
  "-rotate-2 translate-y-1",
];
---

<section class="py-20">
  <div class="max-w-4xl mx-auto px-10 overflow-hidden">
    <div class="flex items-center gap-4 mb-10">
      <span class="text-2xl font-mono text-gray-400">//</span>
      <h1 class="text-4xl font-medium">Awards & Achievements</h1>
      <img src={svgNew.src} alt="arrow" width="40" />
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {
        awards.map((award, index) => (
          <a
            href={award.certificateUrl}
            target="_blank"
            class={`flex flex-col gap-3 p-6 bg-white border-2 shadow-[6px_6px_0px_rgba(0,0,0,0.3)] transition-all hover:shadow-[8px_8px_0px_rgba(0,0,0,0.4)] ${rotations[index % rotations.length]}`}
          >
            <div class="flex items-start justify-between">
              <span class="text-4xl">{award.icon}</span>
              <span class="text-xs font-mono bg-gray-100 px-2 py-1 rounded">
                {award.event}
              </span>
            </div>
            <h3 class="text-xl font-bold">{award.title}</h3>
            <p class="text-gray-600">{award.description}</p>
            <span class="text-sm text-gray-400 hover:text-black">
              View Certificate â†—
            </span>
          </a>
        ))
      }
    </div>
  </div>
</section>
