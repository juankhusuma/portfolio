---
import Bars from "./Bars.astro";

import svgUnderline from "../assets/underline.svg";
import arrowCard from "../assets/arrow-card.svg";

import { projects } from "../config";
---

<section class="py-25 space-y-10 px-5" id="work">
  <div class="max-w-md mx-auto relative reveal-on-scroll">
    <h1 class="text-4xl md:text-5xl font-medium text-center underline">
      Featured Projects
    </h1>
  </div>

  <div class="max-w-3xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-10">
    {
      projects.map((item) => (
        <div class="reveal-on-scroll flex flex-col bg-white p-5 group relative transition-all duration-300 hover:shadow-[8px_8px_0px_rgba(0,0,0,1)] hover:-translate-y-1 border-2 border-transparent hover:border-black">
          <!-- Image Link -->
          <a href={item.link} target="_blank" class="block w-full h-[200px] overflow-hidden border-2 border-black relative z-10">
            <img
              src={item.cover}
              alt={item.name}
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
            />
          </a>

          <div class="space-y-3 pt-4 flex-1 flex flex-col">
            <div class="flex items-center justify-between">
               <h2 class="text-xl font-medium decoration-2 underline-offset-4">{item.name}</h2>
            </div>
            
            <p class="text-gray-600 line-clamp-2 text-sm">{item.desc}</p>
            
            <!-- Dual Interaction Buttons -->
            <div class="grid grid-cols-2 gap-3 mt-auto pt-2">
                <a href={item.link} target="_blank" class="flex items-center justify-center gap-2 px-3 py-2 border-2 border-black bg-[var(--main-bg)] hover:bg-[var(--yellow)] transition-colors font-medium text-sm">
                    View Project <i class="ri-arrow-right-up-line"></i>
                </a>
                 <a href={item.blogLink || '#'} target="_blank" class="flex items-center justify-center gap-2 px-3 py-2 border-2 border-black bg-white hover:bg-black hover:text-white transition-colors font-medium text-sm">
                    Read Case <i class="ri-article-line"></i>
                </a>
            </div>
          </div>
          
          <Bars />
        </div>
      ))
    }
  </div>
</section>
