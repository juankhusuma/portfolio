---
import { education } from "../config";
---

<section class="py-16 px-5" id="education">
    <div class="max-w-4xl mx-auto">
        <div class="flex items-center gap-4 mb-8">
            <span class="text-2xl font-mono text-gray-400">//</span>
            <h2 class="text-3xl font-medium">Education</h2>
        </div>

        <div class="bg-white border-2 p-6 shadow-[4px_4px_0px_rgba(0,0,0,0.2)]">
            <div
                class="flex flex-col md:flex-row md:items-center md:justify-between gap-2 mb-3"
            >
                <div>
                    <h3 class="text-xl font-bold">{education.degree}</h3>
                    <p class="text-lg text-gray-600">{education.institution}</p>
                </div>
                <span
                    class="text-sm font-mono bg-gray-100 px-3 py-1 rounded whitespace-nowrap self-start"
                >
                    {education.period}
                </span>
            </div>

            <div class="flex items-center gap-4 mt-4">
                <div class="flex items-center gap-2">
                    <span class="font-mono text-gray-400">CGPA:</span>
                    <span class="font-bold text-lg">{education.gpa}</span>
                </div>
            </div>

            <div class="mt-4 pt-4 border-t">
                <p class="text-sm text-gray-500 font-mono">// Thesis</p>
                <p class="mt-1">{education.thesis}</p>
            </div>
        </div>
    </div>
</section>
