---
import { education } from "../config";
---

<section class="py-16 px-5" id="education">
    <div class="max-w-5xl mx-auto">
        <div class="flex items-center gap-4 mb-8 reveal-on-scroll">
            <span class="text-2xl font-mono text-gray-400">//</span>
            <h2 class="text-5xl md:text-5xl font-medium">Education</h2>
        </div>

        <div
            class="bg-white border-2 p-6 shadow-[4px_4px_0px_rgba(0,0,0,0.2)] reveal-on-scroll hover:shadow-[6px_6px_0px_rgba(0,0,0,0.3)] transition-shadow duration-300"
        >
            <div
                class="flex flex-col md:flex-row md:items-center md:justify-between gap-2 mb-3"
            >
                <div>
                    <h3 class="text-xl font-bold">{education.degree}</h3>
                    <p class="text-lg text-gray-600">{education.institution}</p>
                </div>
                <span
                    class="text-sm font-mono bg-gray-100 px-3 py-1 rounded whitespace-nowrap self-start"
                >
                    {education.period}
                </span>
            </div>

            <div class="flex items-center gap-4 mt-4">
                <div class="flex items-center gap-2">
                    <span class="font-mono text-gray-400">CGPA:</span>
                    <span class="font-bold text-lg">{education.gpa}</span>
                </div>
                <a
                    href="/Transcript.pdf"
                    target="_blank"
                    class="flex items-center gap-1 text-sm font-mono border-2 border-black px-2 py-1 bg-gray-50 hover:bg-[var(--yellow)] transition-colors shadow-[2px_2px_0px_0px_black] active:translate-y-[1px] active:shadow-none"
                >
                    <i class="ri-file-text-line"></i> View Transcript
                </a>
            </div>

            <div class="mt-4 pt-4 border-t">
                <p class="text-sm text-gray-500 font-mono">// Thesis</p>
                <p class="mt-1">{education.thesis}</p>
            </div>
        </div>
    </div>
</section>
