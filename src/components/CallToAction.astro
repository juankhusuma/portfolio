---
import svgPinkStar from "../assets/pink-star.svg";
import Button from "./Button.astro";
import { cta } from "../config";
---

<section class="px-3" id="hire">
  <div
    class="max-w-3xl mx-auto bg-white text-center flex flex-col gap-4 border-3 shadow-[8px_8px_0px_rgba(0,0,0,0.3)] relative p-10"
  >
    <h1 class="text-3xl">{cta.title}</h1>
    <p class="text-lg max-w-lg mx-auto">{cta.description}</p>
    <div class="flex justify-center">
      <Button
        text={cta.button.text}
        link={cta.button.link}
        target={cta.button.target}
      />
    </div>
    <img
      src={svgPinkStar.src}
      alt="svg"
      width="80"
      class="absolute -top-10 right-20"
    />
  </div>
</section>
